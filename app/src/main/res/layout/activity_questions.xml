<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:elastic="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:background="@android:color/transparent"
    android:layout_height="fill_parent">
    <include
        android:id="@+id/tool_bar2"
        layout="@layout/tool_bar" />
    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tool_bar2"
        android:layout_marginLeft="16.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_marginTop="24.0dip"
        android:text="Answer the questions shown below."
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#ff727272" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView22"
        android:layout_marginTop="24.0dip"
        android:text="Do you have a cough?"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#ff212121"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/textView22"
        android:layout_alignStart="@+id/textView22" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/textView23"
        android:layout_alignStart="@id/textView23"
        android:layout_below="@id/textView23"
        android:layout_marginTop="16.0dip"
        android:background="?android:colorBackground"
        android:text="YES"
        android:textColor="@color/accent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/button5"
        android:layout_alignRight="@id/textView23"
        android:layout_below="@id/textView23"
        android:layout_marginTop="16.0dip"
        android:background="?android:colorBackground"
        android:text="DON'T KNOW"
        android:textColor="@color/accent" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16.0dip"
        android:background="?android:colorBackground"
        android:text="NO"
        android:textColor="@color/accent" />

    <is.arontibo.library.ElasticDownloadView
        android:id="@+id/progressBar3"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="50"
        elastic:backgroundColor="?android:colorBackground"
        android:layout_alignRight="@+id/textView23"
        android:layout_alignEnd="@+id/textView23"
        android:layout_alignLeft="@+id/button5"
        android:layout_alignStart="@+id/button5"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        style="?android:progressBarStyleLarge"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

</RelativeLayout>
